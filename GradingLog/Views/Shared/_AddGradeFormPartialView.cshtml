@model EntitiesModel

<form asp-controller="Subject" asp-action="AddGrade" method="post" class="subject__form">
    <div class="form__group">
        <input asp-for="@Model.gradeModel.TeacherId" class="form__input" id="teacherId" value="@Model.subjectsEntity.Teacher.Id" hidden>
    </div>
    <div class="form__group">
        <input asp-for="@Model.gradeModel.SchoolSubjectId" class="form__input" id="schoolSubjectId" value="@Model.subjectsEntity.Id" hidden>
    </div>

    <div class="form__group">
        <label asp-for="@Model.gradeModel.StudentId" for="studentId" class="form-label">StudentId</label>
        <input asp-for="@Model.gradeModel.StudentId" type="number" class="form__input" id="studentId">
    </div>

    <div class="form__group">
        <label asp-for="@Model.gradeModel.Grade" for="grade" class="form-label">Grade</label>
        <input asp-for="@Model.gradeModel.Grade" type="number"  step="1" min="2" max="5" class="form__input" id="grade">
    </div>

    <button type="submit" class="form__submit">Add grade</button>
</form>